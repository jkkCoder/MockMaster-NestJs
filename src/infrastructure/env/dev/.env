# Development Environment Configuration
# Copy this to .env in the project root for local development
# OR load from src/infrastructure/env/dev/.env based on NODE_ENV

# Application Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5732
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=base

# Test Database Configuration
DB_TEST_NAME=base_test

# Observability Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=false
METRICS_PORT=9090
SERVICE_NAME=nest-base-api
SERVICE_VERSION=1.0.0
# OTLP_ENDPOINT=http://localhost:4318/v1/traces  # Optional: OpenTelemetry endpoint

# HTTP Configuration
ENABLE_REQUEST_ID=true
ENABLE_CORRELATION_ID=true
REQUEST_ID_HEADER=x-request-id
CORRELATION_ID_HEADER=x-correlation-id
CORS_ENABLED=true
CORS_ORIGIN=*

# Authentication Configuration
ENABLE_AUTH=false
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars-long
JWT_EXPIRES_IN=24h
JWT_ALGORITHM=HS256
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d

# NOTE: All environment variables MUST be defined in src/infrastructure/env/base/*.config.ts
# Never access process.env directly - always use the validated config from base/
